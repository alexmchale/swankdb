<table width="100%">
  <tr>
    <th align="left">Content</th>
    <th align="left">Tags</th>
    <th align="left">Last&nbsp;Update</th>
  </tr>

<% @entries.each do |entry| %>
  <tr>
    <td valign="top" align="left"><%=h entry.content %></td>
    <td valign="top" align="left"><%= link_entry_tags entry %></td>
    <td valign="top" align="left"><%= nbsp pretty_timedate(entry.updated_at) %></td>
    <td valign="top"><%= link_to 'Show', entry %></td>
    <td valign="top"><%= link_to 'Edit', edit_entry_path(entry) %></td>
    <td valign="top"><%= link_to 'Destroy', entry, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= separator %>

<%= link_to 'All Entries', :action => :index %>
<%= 3.spaces %>
<%= link_to 'New entry', new_entry_path %>