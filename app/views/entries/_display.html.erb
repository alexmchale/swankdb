<div class="content_display">
  <%= markdown @entry.content %>
</div>

<%= separator %>

<div class="submit_line">
	<%= link_to 'Edit', edit_entry_path(@entry) %>
</div>

<%= separator %>

<p>
  <b>Tags:</b>
	<%= link_entry_tags @entry %>
</p>

<%= separator %>

<% @entry.each_filter_item do |type, item, url| %>
  <p>
		<b><%=h type %>:</b>

		<% if url %>
			<%= link_to item, url %>
		<% else %>
		  <%=h item %>
		<% end %>
	</p>
<% end %>
