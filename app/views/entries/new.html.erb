<h1>New entry</h1>

<% form_for(@entry) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, :class => 'entry_edit' %>
  </p>
  <p>
    <%= f.label :tags %><br />
    <%= f.text_field :tags, :class => 'entry_edit' %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', entries_path %>

<script lang="JavaScript">
  $('textarea#entry_content').autoResize({
    animateDuration: 300,
    extraSpace: 0
  });
</script>
