<% form_for(@entry) do |f| %>
  <%= f.error_messages %>

  <div class="content_edit">
    <%= f.label 'New Entry Content' %>
    <br />
    <%= f.text_area :content, :class => 'entry_edit' %>
  </div>

  <%= separator %>

  <div class="tags_edit">
    <%= f.label 'Tags' %>
    <br />
    <%= f.text_field :tags, :class => 'entry_edit' %>
  </div>

  <%= separator %>

  <div class="submit_line">
    <%= f.submit 'Create' %>
  </div>
<% end %>

<%= link_to 'Back', entries_path %>

<script lang="JavaScript">
  $('textarea#entry_content').autoResize({
    animateDuration: 300,
    extraSpace: 0
  });
</script>
